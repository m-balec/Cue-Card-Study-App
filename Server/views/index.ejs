<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cue Cards</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link rel="stylesheet" href="style.css">
</head>
<body>

    <h1>Cue Cards</h1>

    <!-- Button to bring user to the Create page for cue cards -->
    <button onclick="location.href = 'create.html';">Create</button>


    <div class="cardContainer">
        <% cards.forEach(function(card) { %>
            <div class="cue-card">
                <div class="cue-card-inner">
                    <div class="cue-card-front">
                        <h3 class="type">Question:</h3>
                        <%= card.question %>
                        <h6 class="course">CP330</h6>
                    </div>
                    <div class="cue-card-back">
                        <h3 class="type">Answer:</h3>
                        <%= card.answer %>
                        <h6 class="course">CP390</h6>
                        <div class="cardActions">
                            <form action="/delete/<%= card._id %>" method="get">
                                <button type="submit" class="cardActionButton">Delete</button>
                            </form>
                            <form action="/edit/<%= card._id %>" method="get">
                                <button type="submit" class="cardActionButton">Edit</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</body>
</html>